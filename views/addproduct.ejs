<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <h1>ATN TOY</h1>
        <h3>Add Product</h3>
        <!-- SIDEBAR -->
		<%- include('./partials/sidebar.ejs') %>
		<!-- SIDEBAR -->
        <section id="content">
            <!-- NAVBAR -->
				<%- include('./partials/nav.ejs') %>
				<!-- NAVBAR -->
                <% if(typeof successMessage !== 'undefined') { %>
                    <div class="alert alert-success" role="alert">
                        <%= successMessage %>
                    </div>
                <% } %>
                <main>
                    <div class="table-data">
                        <div class="create-blog content">
                            <form action="/addproduct" method="POST">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label for="id">Product ID:</label>
                                        <input type="text" class="form-control form-control-sm" id="id"
                                            placeholder="Enter Product ID" name="id" required>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="name">Name:</label>
                                        <input type="text" class="form-control form-control-sm" id="name" 
                                            placeholder="Enter Product Name" name="name" required>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="price">Price:</label>
                                        <input type="number"min="0"  class="form-control form-control-sm" id="price" 
                                            placeholder="Enter Product Price" name="price" required>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="description">Description:</label>
                                        <textarea type="text" class="form-control form-control-sm" rows="6 10" id="description" 
                                            placeholder="Description" name="description" required></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-outline-danger">Submit</button>
                                <a href="/product-list"><button type="button" class="btn btn-danger">Back</button></a>
                            </form>
                        </div>
                    </div>
                </main>
        </section>
            <%- include('./partials/footer.ejs') %>
    </body>
</html>